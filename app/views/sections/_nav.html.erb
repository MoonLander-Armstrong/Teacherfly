<div class="flex justify-between flex-grow mx-auto" data-controller="section-hamburger">
  <%= link_to :back, class: "flex items-center md:ml-20 ml-8 py-4 left-arrow text-xl" do %>
    <i class="fa-solid fa-angle-left mr-4"></i>
    <span>上一頁</span>
  <% end %>
  
  <button class="relative mr-20 hidden md:block" data-action="click->section-hamburger#hiddenAvatar">
    <div class="w-10 h-10 rounded-full overflow-hidden">
      <%= image_tag "avatar.jpg" %>
    </div>
    <ul class="absolute top-full -right-12 overflow-hidden bg-green-200 rounded-md shadow-md hidden"  data-section-hamburger-target="avatarButton">
      <li><%= link_to "我的課程", "#" %></li>
      <li><%= link_to "編輯會員資料", "#" %></li>
      <li><%= link_to "登出", "#" %></li>
    </ul>
  </button>

  <button class="p-1 mr-8 md:hidden relative" data-action="click->section-hamburger#hiddenHamburger">
    <div class="w-7 h-0.5 my-1 bg-black"></div>
    <div class="w-7 h-0.5 my-2 bg-black"></div>
    <div class="w-7 h-0.5 my-1 bg-black"></div>
    <ul class="mobile-list absolute top-full right-0 bg-green-200 rounded-md overflow-hidden hidden" data-section-hamburger-target="hamburgerButton">
      <li class="w-10 h-10 mx-auto p-0 mt-4 rounded-full overflow-hidden">
        <%= image_tag "avatar.jpg" %>
      </li>
      <li><%= link_to "我的課程", "#" %></li>
      <li><%= link_to "編輯會員資料", "#" %></li>
      <li><%= link_to "登出", "#" %></li>
    </ul>
  </button>
</div>
