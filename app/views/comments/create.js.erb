var comment = "<%= j render('comments/comment', comment: @comment) %>"

var list = document.querySelector(".comments")
var block = document.querySelector("#comment_<%= @comment.parent_id %>")

<% if @comment.parent_id.nil? %>
  list.insertAdjacentHTML("afterbegin", comment)
<% else %>
  block.insertAdjacentHTML("afterbegin", comment)
<% end %>

document.querySelectorAll(".comments_input").forEach((e)=>{
  e.value=""
})
