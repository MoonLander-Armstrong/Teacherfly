<div class="flex w-full px-4 py-4 sm:w-1/2 md:w-1/3">
  <%= link_to course_path(course), class: "course-card course-card-hover" do %>
    <div class="w-full course-card-image">
      <% if course.classImg.attached? %>
        <%= image_tag course.classImg, class: "w-full h-full object-fit" %>
      <% else %>
        <div>此課程沒有圖片</div>
      <% end %>
    </div>

    <div class="p-6 course-card-main">
      <h2 class="mb-6 text-2xl font-bold text-center">
        <%= course.title %>
      </h2>
      <p>
        <%= course.description %>
      </p>
    </div>

    <div class="flex items-center justify-between p-6">
      <div class="flex items-center">
        <div class="w-8 h-8 mr-2 overflow-hidden rounded-full">
          <% if course.lecturer.mugshot.attached? %>
            <%= image_tag url_for(course.lecturer.mugshot) %>
          <% else %>
            <div class="flex justify-center items-center bg-gray-300 w-8 h-8 mr-4 rounded-full overflow-hidden">
              <i class="fa-solid fa-user"></i>
            </div>
          <% end %>
        </div>
        <span class="text-sm">講師：
        <%= Lecturer.find(course.lecturer_id).name %></span>   
      </div>
      <span><%= course.price.zero? ? "Free" : "$ #{course.price}" %></span>
    </div>
  <% end %>
</div>

