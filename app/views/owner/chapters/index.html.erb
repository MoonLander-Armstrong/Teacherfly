<h1>後台：Chapter列表</h1>


<ul>
  <% @chapters.each do |chapter|%>
    <li>章節：<%= chapter.title %> | 
      <%= link_to "X", owner_course_chapter_path(chapter.course_id, chapter.id), method: "delete" %> | 
      <%= link_to "編輯", edit_owner_course_chapter_path(chapter.course_id, chapter.id) %> 
    </li>
    <ul>
      <% chapter.sections.each do |section| %>
        <li>
          <%= link_to section.title, owner_course_section_path(chapter.course_id, section.id) %> | 
          <%= link_to "X", owner_course_section_path(chapter.course_id, section.id), method: "delete" %>
        </li>
        <li>
          <%= link_to "編輯", edit_owner_course_section_path(chapter.course_id, section.id) %>
        </li>
      <% end %>
    </ul>
    <%#= link_to "新增Section", new_owner_chapter_section_path(chapter.id) %>
  <% end %>
</ul>
