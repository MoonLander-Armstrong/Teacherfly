<tr class="text-primary-500">
  <td class="text-left owner-text hover:underline">
    <div class="flex items-center">
      <div class="mr-2">
        <%= link_to information_owner_user_path(user), class: "flex items-center" do %>
          <% if user.avatar.attached? %>
            <div class="w-8 h-8 mr-4 rounded-full overflow-hidden">
              <%= image_tag url_for(user.avatar) if user.avatar.attached? %>
            </div>
          <% else %>
            <div class="flex justify-center items-center bg-gray-300 w-8 h-8 mr-4 rounded-full overflow-hidden">
              <i class="fa-solid fa-user"></i>
            </div>
          <% end %>
          <span><%= user.username %></span>
        <% end %>
      </div>
    </div>
  </td>
  <td class="px-6 py-6 text-center">
    <div class="flex items-center justify-center">
      <span><%= user.email %></span>
    </div>
  </td>
  <td class="px-6 py-3 text-center">
    <div class="flex justify-center item-center">
      <span>$ 100</span>
    </div>
  </td>
</tr>