<div class="w-full h-full px-4 py-10 m-auto bg-gradient-to-tl">
	<div class="flex justify-between w-full mb-11">
		<div>
			<h1 class="text-4xl">全部課程</h1>
		</div>

		<div class=>
			<%= link_to "新增課程", new_owner_course_path %>
		</div>
	</div>





		
	<table class="w-full table-auto min-w-max">
		<thead>
			<tr class="text-sm leading-normal text-gray-600 uppercase bg-gray-200">
				<th class="px-6 py-3 text-left">課程標題</th>
				<th class="px-6 py-3 text-left">作者</th>
				<th class="px-6 py-3 text-center">學生</th>
				<th class="px-6 py-3 text-center">狀態</th>
				<th class="px-6 py-3 text-center">其他</th>
			</tr>
		</thead>
		<tbody class="text-sm font-light text-gray-600">
			<% @courses.each do |course| %>
			<tr class="border-b border-gray-200 hover:bg-gray-100">
					<td class="px-6 py-3 text-left whitespace-nowrap">
							<div class="flex items-center">
								<div class="mr-2">
								</div>
								<span class="font-medium"><%= link_to course.title, owner_course_path(course) %></span>
							</div>
					</td>
					<td class="px-6 py-3 text-left">
							<div class="flex items-center">
								<span>我是作者</span>
							</div>
					</td>
					<td class="px-6 py-3 text-center">
						<div class="flex items-center justify-center">
							<span>我是學生</span>
						</div>
					</td>
					<td class="px-6 py-3 text-center">
							<span class="px-3 py-1 text-xs text-purple-600 bg-purple-200 rounded-full">
							<%= course.status %>
							</span>
					</td>
					<td class="px-6 py-3 text-center">
						<div class="flex justify-center item-center">
							<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
								<%= link_to "後台", edit_owner_course_path(course) %>
							</div>
							<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
									</svg>
							</div>
							<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">

								<%= link_to "刪除", owner_course_path(course), method: "delete", data: { confirm: "確定刪除?" } %>
								
								<svg xmlns="http://www.w3./2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
								</svg>
							</div>
						</div>
					</td>
			</tr>
			<% end %>
		</tbody>
	</table>
		
</div>








