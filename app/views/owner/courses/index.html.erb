<div class="w-full h-full px-4 m-auto bg-gradient-to-tl">
  <nav class="flex items-center justify-between w-full h-16 border-b-2">
    <h1 class="inline-block m-4 text-2xl text-blue-900">全部課程</h1> 
		<%= link_to  new_owner_course_path do %>  
    	<button class="px-4 py-2 mx-5 my-auto bg-green-300 border-gray-800 rounded hover:bg-green-400">新增課程</button>
		<% end %>
  </nav>	
	
	<%= render "shared/flash" %>	
	
	<table class="mt-10 owner-table">
		<thead class="owner-thead">
			<tr>
				<th class="text-left owner-text">課程標題</th>
				<th class="text-left owner-text">作者</th>
				<th class="text-center owner-text">講師</th>
				<th class="text-center owner-text">狀態</th>
				<th class="text-center owner-text">其他</th>
			</tr>
		</thead>
		<tbody class="owner-tbody">
			<% @courses.each do |course| %>
				<tr class="border-b border-gray-200 hover:bg-gray-100">
					<td class="text-left owner-text whitespace-nowrap">
						<div class="flex items-center">
							<div class="mr-2">
								<span class="text-lg font-medium text-blue-600"><%= link_to course.title, information_owner_course_path(course) %></span>
							</div>
						</div>
					</td>
					<td class="px-6 py-3 text-left">
						<div class="flex items-center">
							<span>....</span>
						</div>
					</td>
					<td class="px-6 py-3 text-center">
						<div class="flex items-center justify-center">
							<span><%= course.lecturer.name %></span>
						</div>
					</td>
					<td class="px-6 py-3 text-center">
						<span class="tag <%= course.published == "publish" ? "tag-publish" : "tag-draft" %>">
							<%= course.published %>
						</span>
					</td>
					<td class="px-6 py-3 text-center">
						<div class="flex justify-center item-center">
							<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
								</svg>
							</div>
							<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
								<%= link_to "刪除", owner_course_path(course), method: "delete", data: { confirm: "確定刪除?" } %>
								<svg xmlns="http://www.w3./2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
								</svg>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


	









