<h1>新增課程</h1>

<%= form_for(@course, url: owner_courses_path ) do |form| %>

    <div>
        <%= form.label :classImg, "圖片" %>
        <%= form.file_field :classImg %>
    </div>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    
    <div>
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>

    <div>
        <%= form.label :content %>
        <%= form.text_area :content %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>
    
    <div>
      <%= form.label :status %>
      <%= form.select :status, Section.published_state %>
    </div>

    <div>
      <%= form.label :lecturer_id %>
      <%= form.select :lecturer_id, Lecturer.all.map{ |c| c.name } %>
    </div>

    <%= form.submit %>

<% end %>